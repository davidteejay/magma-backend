            "properties": {
              "token": {
                "type": "string"
              },
              "email": {
                "type": "string"
              },
              "id": {
                "type": "integer",
                "format": "int64"
              },
              "firstname": {
                "type": "string"
              },
              "lastname": {
                "type": "string"
              },
